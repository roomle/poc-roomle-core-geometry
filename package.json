{
  "name": "node-ts-three-js-wasm",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "install:ncu": "npm install -g npm-check-updates",
    "install:webpack": "npm install --save-dev webpack",
    "update:modules": "ncu -u && npm update && npm i",
    "copy:wasm": "copyfiles --flat ./buildWasm/*.wasm ./dist/client/",
    "build:wasm": "./buildWASM.sh && npm run copy:wasm",
    "build:client": "webpack --config ./src/client/webpack.prod.js",
    "build:server": "tsc -p ./src/server",
    "build": "npm run build:wasm  && npm run build:client && npm run build:server",
    "dev": "webpack serve --config ./src/client/webpack.dev.js",
    "start": "node ./dist/server/threeServer.js"
  },
  "author": "Rabbid76",
  "license": "ISC",
  "devDependencies": {
    "@types/dat.gui": "^0.7.10",
    "@types/express": "^4.17.17",
    "@types/node": "^20.1.0",
    "@types/three": "^0.152.0",
    "copyfiles": "^2.4.1",
    "dat.gui": "^0.7.9",
    "install-peers": "^1.0.4",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.82.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "three": "^0.152.2"
  }
}
